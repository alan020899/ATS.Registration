<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Registration"
        android:id="@+id/button"
        android:layout_marginTop="140dp"
        android:width="200dp"
        android:height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="openActmain2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner Record"
        android:id="@+id/button2"
        android:layout_marginTop="50dp"
        android:height="75dp"
        android:width="200dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:onClick="openActmain3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Registration"
        android:id="@+id/button3"
        android:layout_marginTop="50dp"
        android:height="75dp"
        android:width="200dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="openActmain4" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button4"
        android:layout_marginTop="50dp"
        android:height="75dp"
        android:width="200dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About ATS"
        android:id="@+id/button5"
        android:layout_marginTop="50dp"
        android:height="75dp"
        android:width="200dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ATS"
        android:id="@+id/textView"
        android:layout_marginTop="63dp"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
